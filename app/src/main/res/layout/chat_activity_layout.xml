<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/chatactivity_list"
        android:divider="@null"
        android:dividerHeight="10dp"
        android:background="#ebebeb"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <!--https://blog.csdn.net/changsimeng/article/details/73278020-->
        <!--分割线divider-->
    </android.support.v7.widget.RecyclerView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"/>

        <com.example.ChatInterface.AudioRecordButton
            android:id="@+id/chat_activity_recordbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/record_normal"
            android:gravity="center"
            android:minHeight="0dp"
            android:padding="9dp"
            android:text="@string/str_record_normal"
            android:textSize="22sp"
            android:textColor="#727272">
            <!--android:stateListAnimator="@null"-->
            <!--取消阴影-->
        </com.example.ChatInterface.AudioRecordButton>
    </FrameLayout>
</LinearLayout>